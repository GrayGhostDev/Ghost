# Ghost Backend Framework - Environment Configuration
# Copy this file to .env and modify the values as needed

# Basic settings
ENVIRONMENT=development
DEBUG=true
PROJECT_NAME=Ghost Backend

# Database configuration (DB_PASSWORD is loaded from macOS Keychain by default)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ghost_db
DB_USER=ghost
# DB_PASSWORD is sourced from macOS Keychain (service "Ghost DB Password", account "ghost")
DB_DRIVER=postgresql

# Redis configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# API configuration
# For production, use 127.0.0.1 and reverse proxy. Use 0.0.0.0 only for development if needed
API_HOST=127.0.0.1
API_PORT=8000
API_KEY=your-api-key-here
JWT_SECRET=your-jwt-secret-key-here-make-it-long-and-random
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24

# External API keys
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GITHUB_TOKEN=your_github_personal_access_token_here
SENTRY_DSN=your_sentry_dsn_here

# Logging configuration
LOG_LEVEL=INFO
LOG_FILE=logs/ghost.log

# Legacy compatibility
ANTHROPIC_ADMIN_API_KEY=your_anthropic_api_key_here
BRAVE_API_KEY=your_brave_api_key_here
GITHUB_PAT=your_github_personal_access_token_here
# DATABASE_URL is assembled at runtime by scripts/secrets/runtime_env.sh
REDIS_URL=redis://localhost:6379/0
SECRET_KEY=your_secret_key_here
PYTHONPATH=./src
